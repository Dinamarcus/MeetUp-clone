<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %></h1>

    <form action="/nuevo-grupo" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" value="<%= nombre %>" placeholder="Nombre grupo">
        </div>

        <div class="campo descripcion">
            <label for="descripcion">Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="campo">
            <label for="categoria">Categoria</label>
            <select name="categoria">
                <option value="" selected>-- Elegir una categoria --</option>
                <% if (categorias.length) { %>
                <% categorias.forEach(categoria => { %>
                <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
                <% }) %>
                <% } else { %>
                <option value="" selected>No hay categorias</option>
                <% } %>
            </select>
        </div>

        <div class="campo">
            <label for="imagen">Imagen</label>
            <input type="file" name="imagen">
        </div>
        <div class="campo">
            <label for="sitio">Sitio Web</label>
            <input type="url" name="sitio" placeholder="Sitio Web" value="<%= sitio %>">
        </div>

        <div class="campo enviar">
            <input type="submit" value="Crear Grupo" class="btn btn-rosa">
        </div>
    </form>
</main>
<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %></h1>

    <form method="POST" class="default-form">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" value="<%= grupo.nombre %>" placeholder="Nombre grupo">
        </div>

        <div class="campo descripcion">
            <label for="descripcion">Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= grupo.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="campo">
            <label for="categoria">Categoria</label>
            <select name="categoria">
                <option value="" selected> -- Elegir una categoria --</option>
                <% if (categorias.length) { %>
                <% categorias.forEach(categoria => { %>
                <option value="<%= categoria.dataValues.id %>"
                    <%= categoria.dataValues.id === grupo.categoriaId ? "selected" : "" %> %>
                    ><%= categoria.dataValues.nombre %>
                </option>
                <% }) %>
                <% } else { %>
                <option value="" selected>No hay categorias</option>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label for="sitio">Sitio Web</label>
            <input type="url" name="sitio" placeholder="Sitio Web" value="<%= grupo.sitio %>">
        </div>

        <div class="campo enviar">
            <input type="submit" value="Guardar Cambios" class="btn btn-rosa">
        </div>
    </form>
</main>